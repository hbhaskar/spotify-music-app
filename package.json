{
  "name": "music-app",
  "version": "1.0.0",
  "description": "A single page app for searching music on spotify",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/hbhaskar/spotify-music-app.git"
  },
  "scripts": {
    "start": "concurrently -k \"npm run dev\" \"npm run watch-css\"",
    "dev": "lite-server",
    "bundle-js": "jspm bundle ./src/app/main.js src/js/build.js --minify",
    "build-css": "node-sass --include-path scss ./src/styles/main.scss  src/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "music",
    "app"
  ],
  "author": {
    "email": "harimaxb@gmail.com",
    "name": "Harish Bhaskar"
  },
  "license": "ISC",
  "devDependencies": {
    "babel": "5.8.23",
    "concurrently": "^3.4.0",
    "jasmine-async-sugar": "1.3.0",
    "jasmine-core": "2.3.4",
    "jasmine-reporters": "2.0.7",
    "jspm": "^0.16.13",
    "karma": "0.13.14",
    "karma-babel-preprocessor": "5.2.2",
    "karma-chrome-launcher": "0.2.1",
    "karma-firefox-launcher": "0.1.6",
    "karma-jasmine": "0.3.6",
    "karma-jspm": "2.0.1",
    "karma-junit-reporter": "0.3.8",
    "karma-phantomjs-launcher": "0.2.1",
    "karma-safari-launcher": "0.1.1",
    "lite-server": "^2.3.0",
    "node-sass": "^4.5.3",
    "phantomjs": "1.9.18",
    "protractor": "2.5.1",
    "systemjs-builder": "0.14.8"
  },
  "jspm": {
    "dependencies": {
      "angular": "github:angular/bower-angular@^1.6.4",
      "angular-local-storage": "npm:angular-local-storage@^0.6.0",
      "angular-ui-router": "github:angular-ui/angular-ui-router-bower@^1.0.3",
      "ngcomponentrouter": "npm:ngcomponentrouter@^2.1.0"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  }
}
